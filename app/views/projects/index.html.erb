<h1 class="ui dividing header">Projects</h1>

<table  class="ui table celled striped ">
  <thead>
    <tr>
      <th>Title</th>
      <th>Owner</th>
      <th># Users</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%=link_to project.title, project %></td>
        <td><%= project.owner.name %></td>
        <td><%= project.users.size %></td>
        <td>
          <%= link_to project, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="delete icon"></i> Remove
          <% end %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path, class: "ui primary button" %>
