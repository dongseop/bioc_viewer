<h1 class="ui dividing header">Projects</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Project</th>
      <th>Priv</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_users.each do |project_user| %>
      <tr>
        <td><%= project_user.user %></td>
        <td><%= project_user.project %></td>
        <td><%= project_user.priv %></td>
        <td><%= link_to 'Show', project_user %></td>
        <td><%= link_to 'Edit', edit_project_user_path(project_user) %></td>
        <td><%= link_to 'Destroy', project_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

